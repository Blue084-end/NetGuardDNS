<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Style cho nút chính -->
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_500</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <!-- Style cho TextView tiêu đề -->
    <style name="AppTitleText" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <!-- Style cho Switch -->
    <style name="AppSwitch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style cho EditText nhập tên miền -->
    <style name="AppEditText" parent="Widget.Material3.TextInputEditText">
        <item name="android:layout_margin">@dimen/margin_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

</resources>
